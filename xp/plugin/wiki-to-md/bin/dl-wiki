#!/bin/sh







url="$1"
escaped_title="$(wikipedia-util.py extract-title "$url")"
title="$(py-decode-url.py "$escaped_title")"

source proxy-enable

# 公式是渲染好的:
curl  "https://zh.wikipedia.org/w/api.php?format=json&action=parse&format=json&prop=text&page=$escaped_title" | jq -r '.parse.text["*"]' > "$title-tmp.html"

wikipedia-math-to-latex.py "$title-tmp.html" "$title.html"

rm "$title.html"

open "$title.html"

