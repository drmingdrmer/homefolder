#!/bin/sh

pattern=${1-x-week-report:}

git log --format="%b" --since="1 week before" \
    | grep "$pattern" \
    | sort \
    | awk -v p="$pattern" '{gsub(p" *", "", $0); print $0}' \
    | awk -F: '{
                if (prev != $1) { print $1 ":"; };
                prev = $1;
                gsub($1": *", "    ", $0);
                print $0;
            }'
