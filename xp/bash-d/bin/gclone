#!/bin/sh

url="$1"
if [ "${url:0:4}" == "git@" ]; then
    # git@github.com:apache/parquet-format.git

    host="${url#*@}"
    host="${host%%:*}"

    dir="${url%.git}"
    dir="${dir##*:}"

    giturl="$url"
elif [ "${url:0:8}" == "https://" ]; then
    # https://github.com/apache/parquet-format.git

    stripped="${url#https://}"
    stripped="${stripped%.git}"
    host="${stripped%%/*}"
    dir="${stripped#*/}"

    giturl="git@$host:$dir.git"
fi


echo $host $dir

if [ "$2" == "git" ]; then
    git clone $giturl "$host/$dir"
else
    git clone $url "$host/$dir"
fi

ln -s "$host/$dir" .
