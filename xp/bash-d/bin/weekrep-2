#!/bin/sh


_days=5
_show_time=0
_author=""

while [ $# -gt 0 ]
do
    case $1 in
        -d|--days)
            shift
            _days=$1
            shift
            ;;
        -t)
            shift
            _show_time=1
            ;;
        -a)
            shift
            _author=$1
            shift
            ;;
    esac
done

if [ "$_author" = "me" ]; then
    _author=$(git config --local --get user.name)
fi

arg_author=""
fmt="%s"
awk_filter='{print $0}'

if [ ".$author" != "." ]; then
    arg_author="--author=\"$_author\""
fi

if [ "$_show_time" = "1" ]; then
    fmt="%ad $fmt"
    awk_filter='{$4="";$5="";$6="     "; print $0}'
fi

git shortlog \
    $arg_author \
    --since="$_days days ago" \
    --no-merges \
    --format="$fmt" \
    | awk "$awk_filter"
