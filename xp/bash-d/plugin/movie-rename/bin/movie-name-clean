#!/bin/sh

which rename || { echo 'reanme not found'; exit 1; }
ptns='s/\s/-/ig;
s/[\[\]()@]/-/ig;
s/飞鸟娱乐//ig;
s/bbs.[0-9a-z]+.(net|com|org)//ig;
s/\baac\b//ig;
s/\bac\b//ig;
s/\bhr-hdtv\b//ig;
s/\bdvdscr\b//ig;
s/x264//ig;
s/1024分辨率//ig;
s/ac3//ig;
s/c00kies-inf1n1ty//ig;
s/(bd|hdtv|hd|web|dvd)rip//ig;
s/(dvd|vod|bd)-(rmvb|mp4)//ig;
s/web-hr//ig;
s/bluray//ig;
s/chi_eng//ig;
s/pristine//ig;
s/ristine//ig;
s/xvid-nedivx//ig;
s/xvid-tlf//ig;
s/飘花电影|影视帝国|电影天堂//ig;
s/数字35//ig;
s/香木鱼//ig;
s/无极电影//ig;
s/BT无极//ig;
s/www.btwuji.com//ig;
s/piaohua.com//ig;
s/www.dy2018.net//ig;
s/www.wujidy.com//ig;
s/www.dygod.cn//ig;
s/www.dyxiazai.com//ig;
s/BD高清分辨率//ig;
s/中文字幕//ig;
s/dvd清//ig;
s/\bv2\b//ig;
s/yyets//ig;
s/人人影视(制作)?//ig;
s/WOLF字幕组//ig;
s/新Www-Cc//ig;
s/HDTV//g;
s/NCARBBS//g;
s/FLEET//g;
s/AVS//g;
s/中英字幕//ig;
s/chi_jap//ig;
s/国粤日英//ig;
s/国粤日//ig;
s/国日音轨//ig;
s/BD国粤双语//ig;
s/双语字幕//ig;
s/中英双字//ig;
s/原创翻译中英//ig;
s/dvd国语//ig;
s/中字//ig;
s/三音轨//ig;
s/(720)p//ig;
s/[0-9]+p?[xX][0-9]+//ig;
s/\bcd([0-9])\b/$1/ig;
s/【[^】]*】//ig;
s/[-]+/-/ig;
s/\.+/./ig;
s/^[.\-]|[.\-]\/?$//ig;
s/-\.|\.-/./ig;'

season_dot='S[0-9]{2}E[0-9]{2}\.|[0-9]+'
alpha_minus='[a-z0-9-]+'
alpha='[a-z0-9]+'
num='[0-9]+'
unicode='[\x80-\xff]+'

q_suffix='('$alpha'$)'

remove_year='s/\b(19|20)[0-9]{2}\b//ig'
dot_to_minus='s/('$alpha_minus')\.('$alpha_minus'\.)('$season_dot'\.|)'$q_suffix'/$1-$2$3$4/ig'
zh_to_right='s/^('$unicode'\.)('$alpha_minus'\.)('$season_dot'\.|)'$q_suffix'/$2$1$3$4/i'
season_to_right='s/^('$alpha_minus'\.)('$season_dot'\.|)('$unicode'\.)'$q_suffix'/$1$3$2$4/i'
move_num_right='s/\.('$num'\.)(.+\.)'$q_suffix'/.$2$1$3/ig'

ptns="$ptns
$remove_year;
$dot_to_minus;
$zh_to_right;
$season_to_right;
$move_num_right;
"

rename "$ptns" *.rmvb *.avi *.mp4 *.mkv *.srt *.torrent */ \
                  .*.rmvb .*.avi .*.mp4 .*.mkv .*.srt *.torrent
