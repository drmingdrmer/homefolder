#!/bin/bash

get_shortcut=0

shortcmd="$1"
shift

if [ "$shortcmd" = "get_shortcut" ]; then
    get_shortcut=1
    shortcmd="$1"
    shift
fi

case $shortcmd in
    d*)
        shortcut=d
        cmd="diff --color --find-renames"
        ;;
    l*)
        shortcut=l
        export GIT_COMMA_FLAG=ldr
        cmd="log --color --decorate --abbrev-commit --find-renames"
        ;;
    g*)
        shortcut=g
        export GIT_COMMA_FLAG=glor
        cmd="log --color --decorate --abbrev-commit --find-renames"
        ;;
    mc*)
        shortcut=mc
        cmd="mc"
        ;;
    mf*)
        shortcut=mf
        cmd="mf"
        ;;
    st*)
        shortcut=st
        cmd="status"
        ;;
    sb*) # status with branch info
        shortcut=sb
        cmd="status --short --branch"
        ;;
    sf) # status about file changes
        shortcut=sf
        cmd="diff --name-only --relative HEAD"
        ;;
    *)
        echo invalid command $cmd >&2
        exit 1
esac

len_shortcut=${#shortcut}
arg1=${shortcmd:$len_shortcut}

if [ "$get_shortcut" = "1" ]; then
    echo $shortcut
    exit 0
fi

eval git $(_git_xp_interrept_flag conf $arg1) \
    $cmd \
    "$(_git_xp_interrept_flag arg $arg1)" "$@"

